page{
  background: #eee;
}
.search-header{
  position: relative;
  height: 37px;
  background: #03bbd5;
  padding-top: 7px;
}
.search-input{
  margin:0 70px 0 10px;
  border-radius: 4px;
  background: #fff;
  height: 30px;
  padding: 0 5px;
}
.search-btn{
  position: absolute;
  right: 0;
  top: 0;
  width: 60px;
  line-height: 44px;
  color: #fff;
  text-align: center;
}


.item{
  background: #fff;
  margin-bottom: 10px;
  padding: 10px;
}
.item-address{
  font-size: 12px;
  color: #ff9700;
  margin-bottom: 8px;
}
.item-message{
  font-size: 18px;
  color: #777;
}